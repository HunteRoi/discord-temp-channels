{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["lib/*", "node_modules/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs/api-docs",
    "excludePrivate": true,
    "excludeExternals": true,
    "hideGenerator": true
  }
}
